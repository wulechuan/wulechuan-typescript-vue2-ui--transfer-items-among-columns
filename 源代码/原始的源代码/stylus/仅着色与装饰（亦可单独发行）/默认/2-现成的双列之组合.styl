@require '../../_通用变量集_'
@require './可重用代码块之集'

// Stylus 语言的变量名不允许采用汉字！

{identifiable_selector__dual_columns__root} {
    color black

    .容纳着双列的中央主体 {
        MIXIN_webkit_scrollbar(black, 1)
        scrollbar-width thin
    }

    .甲乙两列之间之竖栏 {

        if true {
            border-color transparent
        } else {
            border-color #333
            background-color #999
        }
    }
}
