@import '../_通用变量集_'

// Stylus 语言的变量名不允许采用汉字！label:focus-within {

{identifiable_selector__component_root} {
    {css_var_name__focusing_element_outline_color}: black // #795cfc

    color black

    label {
        outline-color transparent
        box-shadow none
    }

    label:focus-within {
        transition-property visibility, opacity, color, border-color, background-color, outline-color, box-shadow, text-shadow
        transition-duration 0.319s
        transition-timing-function ease-out

        outline-color 'var(%s)' % unquote(css_var_name__focusing_element_outline_color)
        box-shadow 0 0 0 ('calc(var(%s) - 1px)' % unquote(css_var_name__focusing_element_outline_width)) ('var(%s)' % unquote(css_var_name__focusing_element_outline_color))
    }

    textarea,
    input,
    button {
        transition-property visibility, opacity, color, border-color, background-color, outline-color, box-shadow, text-shadow
        transition-duration 0.319s
        transition-timing-function ease-out

        outline-color transparent
        box-shadow none

        &:focus-visible {
            outline-color 'var(%s)' % unquote(css_var_name__focusing_element_outline_color)
            box-shadow 0 0 0 ('calc(var(%s) - 1px)' % unquote(css_var_name__focusing_element_outline_width)) ('var(%s)' % unquote(css_var_name__focusing_element_outline_color))
        }
    }

    textarea,
    input {

        &::placeholder {
            color #ccc
        }
    }

    button {
        color #000
        border-color #888
        background-color #eee
    }

    .输入项 {

    }

    .输入项-勾选项 {

    }

    .勾选项视觉假体 {

    }

    label.包裹着输入项 {
        color inherit
        // color black
        border-radius 0.2em

        &:hover {
            background-color rgba(black, 0.1)
        }

        &:disabled {
            color #999
            border-color transparent
        }
    }

    input[type="checkbox"] {
        color inherit
        border-color currentColor

        // &::before { /* 火狐浏览器中的 input 元素不支持 ::before 。 */
        //     border-radius 0.2em
        //     background-color white
        // }
    }

    input[type="checkbox"]:hover,
    label.包裹着输入项:hover input[type="checkbox"] {
        color #795cfc
    }

    .总标题栏 {
        border-color inherit
    }

    // .底部内容栏 {
    //     border-color inherit
    // }

    .甲乙两列之间之竖栏 {
        border-color transparent
        // border-color #333
        // background-color #aaa
    }

    .甲乙两列之间之竖栏-默认内容,
    .底部内容栏-默认内容 {

        .功能单体-主体为按钮 {

            .迁移条目之按钮 {
                border-radius 1000px

                // &:disabled {
                // }
            }

            .角标 {
                border-radius 1000px
                background-color red
                color white
                box-shadow 0 0 0.25em rgba(#722, 0.319)
            }
        }
    }

    // .底部内容栏-默认内容 {
    //     margin-top calc(-1 * border-width var(--chief-blocks-border-width)) // 用以 “ 吃掉 ” 中央左右两列底部的边线
    //     background-color #eee
    // }
}

{identifiable_selector__sub_component_single_column} {

    .列首 {
        border-color inherit
    }

    .列标题栏之默认内容 {
        color white
        background-color rgba(black, 0.6)
    }

    .功能块-条目过滤器 {
        border-color inherit
    }

    .条目过滤器-文本输入框 {
        border-color inherit
        border-radius 1000px

        &.应给予视觉强调以引导用户来此 {
            animation-iteration-count infinite
            animation-duration 1.5s
        }

        &:disabled {
            animation-name none
            border-color rgba(black, 0.079)
            background-color rgba(white, 0.319)
        }
    }

    .功能块-全选或全部取消选中 {

        label.包裹着输入项 {

            &.已禁止交互 {
                background-color transparent
            }

            .输入项配文 {
                color black
            }
        }
    }

    .功能块-条目统计 {
        background-color rgba(black, 0.15)

        .字典式列表之条目 > dt,
        .字典式列表之条目 > dd {

            > span {
                border-radius 0.2em
            }
        }

        .字典式列表之条目 {
            color #888
        }

        .字典式列表之条目 > dd > span {
            color black
            text-shadow 0 0 1px rgba(black, 0.25)
        }

        .字典式列表之条目--已选中条目之统计 .值.值--总数 {
            text-shadow none
            color white
            background-color black
        }

        .字典式列表之条目--已选中条目之统计 .值.值--列示数 {
            text-shadow none
            color white
            background-color rgba(black, 0.5)
        }
    }

    .功能块-条目列表皿 {
        box-shadow inset 0 0 0.3em rgba(black, 0.319)
    }

    .条目列表之提示语 {
        border-radius 0.5em
        color #bbb
        border-color black
        background-color rgba(black, 0.9)
        box-shadow 0 0 0.4em rgba(black, 0.75)

        // em.值 {
        //     color red
        // }

        .值-期望列示之条目总数 {
            color #ff8
        }

        .值-条目总数之限制数 {
            color rgb(90, 236, 61)
        }

        strong {
            color #faa

            // animation-name wulechuan-dual-columns-exchange-data--message--strong-text-flashing
            // animation-iteration-count infinite
            // animation-duration 4.5s

            // @keyframes wulechuan-dual-columns-exchange-data--message--strong-text-flashing {
            //   0%, 100% { color: #faa; }
            //   50% { color: #f88; }
            // }
        }
    }

    .条目列表 {

        // .条目 {
        // }

        .条目视觉主体 {
            background-color transparent

            &:hover {
                // color white
                // background-color #eee
                background-color #dad3f8
            }

            &.已选中 {
                color white
                // background-color #777
                background-color #795cfc

                &:hover {
                    background-color #a38eff
                }
            }

            &.已禁止选择 {
                color #e3e3e3
                text-shadow -1px -1px 0px rgba(black, 0.319), 1px 1px 0px white
                background-color #f8f8f8
                background-image repeating-linear-gradient(-45deg, transparent 0.05em 0.5em, rgba(black, 0.025) 0.55em 1em);
            }
        }
    }

    &.甲列 {
        border-color #6e4f4f

        .列首 {
            background-color #ffdfdf
        }

        .条目过滤器-文本输入框 {

            &.应给予视觉强调以引导用户来此 {
                border-color #f00

                // Stylus 语言的关键帧动画名称不允许采用汉字！
                animation-name wulechuan-dual-columns-exchange-data--list-items-filtering-input-box1--emphasizing
                @keyframes wulechuan-dual-columns-exchange-data--list-items-filtering-input-box1--emphasizing {
                    0%, 100% { border-color: #f00; }
                    40%, 60% { border-color: #fbb; }
                }
            }
        }
    }

    &.乙列 {
        border-color #304735

        .列首 {
            background-color #ddfce5
        }

        .条目过滤器-文本输入框 {

            &.应给予视觉强调以引导用户来此 {
                border-color #090

                // Stylus 语言的关键帧动画名称不允许采用汉字！
                animation-name wulechuan-dual-columns-exchange-data--list-items-filtering-input-box2--emphasizing
                @keyframes wulechuan-dual-columns-exchange-data--list-items-filtering-input-box2--emphasizing {
                    0%, 100% { border-color: #aea; }
                    40%, 60% { border-color: #090; }
                }

                &.给予的视觉强调不应为动画 {
                    animation-name none
                }
            }
        }
    }
}