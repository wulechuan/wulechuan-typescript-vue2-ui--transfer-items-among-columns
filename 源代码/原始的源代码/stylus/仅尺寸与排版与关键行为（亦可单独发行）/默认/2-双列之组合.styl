@import '../_通用变量集_'

// Stylus 语言的变量名不允许采用汉字！

{identifiable_selector__component_root} {
    {css_var_name__chief_blocks_border_width} 2px
    // {css_var_name__input_boxes_border_width} 'var(%s)' % unquote(css_var_name__chief_blocks_border_width)

    font-size 20px
    display flex
    flex-direction column
    box-sizing border-box
    height 100%

    .总标题栏 {
        flex 0 0
    }

    .底部内容栏 {
        flex 0 0
        padding 0 1em
    }

    .容纳着双列的中央主体 {
        flex 1 1
        display flex
        flex-direction row
        align-items stretch
        overflow auto
        padding 1em // 为了在出现滚动条的情形给主体内容四周留白。
    }

    // Stylus 语言的变量名不允许采用汉字！另，应为我坚持在样式类名中使用汉字，故 @extend 之做法无效，只能改用 @block 之做法。
    left_and_right_columns_layout = @block {
        flex-shrink 1
        flex-grow 3
        flex-basis auto
        width 30em
    }

    // Stylus 语言的变量名不允许采用汉字！另，应为我坚持在样式类名中使用汉字，故 @extend 之做法无效，只能改用 @block 之做法。
    middle_column_layout = @block {
        flex-shrink 3
        flex-grow 1
        flex-basis auto
        max-width 20em
        min-width 6em
        height 100%
    }

    {identifiable_selector__sub_component_single_column} {
        {left_and_right_columns_layout}

        min-width 20em
        min-height 30em
    }

    .甲乙两列之间之竖栏 {
        {middle_column_layout}

        box-sizing border-box
        padding 17em 0.25em 3em

        border-style solid
        border-width 'var(%s)' % unquote(css_var_name__chief_blocks_border_width)
        border-left-width 0
        border-right-width 0

        hr.仅用于样式表缺失之情形 {
            display none
        }
    }

    // 以下是 Vue 部件中各 “ 内容皿 ” 中提供的默认内容之样式定义。一旦内容皿之内容被替换，以下样式之定义恐怕就用不上了。

    .甲乙两列之间之竖栏之默认内容 {
        display flex
        flex-direction column
        justify-content flex-start
        align-items center
        box-sizing border-box
        padding 0.5em
        width 100%
        height 100%

        .功能单体-主体为按钮 {
            display block
            margin 0.75em auto
            position relative

            .迁移条目之按钮 {
                font-size 1.25em
                margin 0
            }

            .迁移条目之按钮--甲列至乙列.应做特别调整 {
                padding-left 0.75em
            }

            .迁移条目之按钮--乙列至甲列.应做特别调整 {
                padding-left 0.25em
            }
        }
    }

    .底部内容栏之默认内容 {
        display flex
        flex-direction row
        justify-content center
        align-items center
        box-sizing border-box
        padding 1em
        height 6em

        .功能块 {
            {left_and_right_columns_layout}

            position relative
            display block
            text-align center
        }

        .中央间隙 {
            {middle_column_layout}
        }

        .功能单体-主体为按钮 {
            display inline-block
            position relative

            .迁移条目之按钮 {
                font-size 1.25em
                margin 0
            }
        }
    }
}
