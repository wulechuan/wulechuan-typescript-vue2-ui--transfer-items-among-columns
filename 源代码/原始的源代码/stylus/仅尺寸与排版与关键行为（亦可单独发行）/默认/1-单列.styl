@import '../_通用变量集_'

// Stylus 语言的变量名不允许采用汉字！

{identifiable_selector__sub_component_single_column} {
    display flex
    overflow hidden
    flex-direction column
    box-sizing border-box
    border-width 'var(%s)' % unquote(css_var_name__chief_blocks_border_width)
    border-style solid

    .列首 {
        margin 0
        padding 0
        border-style solid
        border-top-width 0
        border-left-width 0
        border-right-width 0
        border-bottom-width 'var(%s)' % unquote(css_var_name__chief_blocks_border_width)
    }

    .列标题栏 {
        position relative
        padding 0.5em 1em
        text-align center
    }

    .列标题栏之默认内容 {
        margin -0.5em -1em
        padding 0.8em 1em

        h5 {
            font-size 1.25em
            font-weight 600
            margin 0
            letter-spacing 0.1em
            // padding-left 0.1em
        }
    }

    .功能块-条目过滤器 {
        flex 0 0 2em
        display block
        padding 0.5em 0.75em
    }

    .条目过滤器-文本输入框 {
        font-size inherit
        display block
        box-sizing border-box
        width 100%
        height 2.2em
        padding 0.25em 1.2em
        line-height normal
    }

    .功能块-全选或全部取消选中 {
        padding 0.25em 1em
        margin-top -0.5em

        label.包裹着输入项 {
            display flex
            width 15em
            white-space nowrap
            // margin-left auto
            // margin-right auto
        }
    }

    .功能块-条目统计 {
        margin 0
        padding 0.3em 0.75em

        .字典式列表之条目 {
            display flex
            flex-direction row
            flex-wrap wrap
            max-width 24em
        }

        .字典式列表之条目 > dt,
        .字典式列表之条目 > dd {
            padding 0.25em

            > span {
                box-sizing border-box
                display block
                padding 0.2em 0.3em
                height 1.6em
                line-height 1.2
            }
        }

        .字典式列表之条目 > dt {
            flex 0 0 4em
            display block
            margin 0 -1em 0 0
        }

        .字典式列表之条目 > dd {
            flex 1 1 auto
            min-width 16em
            margin 0 0 0 2em
            display flex
            flex-direction row

            .括弧--左,
            .括弧--右 {
                line-height 1.2
            }

            .括弧--左 {
                flex 1 0 auto
                margin-left 0.5em
                margin-right 0
                text-align right

                &:first-child {
                    margin-left 0
                }
            }

            .括弧--右 {
                flex 0 0 auto
                margin-left 0
                text-align left
                margin-right 1em

                &:last-child {
                    margin-right -1em
                }
            }

            .值 {
                z-index 10
                flex 0 0 5em
                margin 0
                text-align right
            }

            .值-前缀,
            .值-后缀 {
                overflow hidden
                white-space nowrap
            }

            .值-前缀 {
                flex 0 2 auto
                text-align right
                margin-right 0.25em
            }

            .值-后缀 {
                flex 0 0 auto
                text-align left
                margin-left 0.25em
            }

            .值 + .括弧--右 {
                margin-left -0.15em
            }

            .值-后缀 + .括弧--右,
            .括弧--左 + .值-前缀 {
                margin-left -0.4em
            }
        }
    }

    .功能块-条目列表皿 {
        flex 1 1 auto
        display flex
        flex-direction column
        overflow hidden
        padding 0.1em
    }

    .条目列表 {
        list-style none
        padding 0
        flex 1 1
        height 100%
        overflow-y scroll
        padding 0 0 0 0.5em
        margin 0
    }

    .功能块-条目列表说明书-控制栏 {
        position relative
        padding 0.5em
        text-align center

        button {
            font-size 0.8em
        }

        {identifiable_selector__sub_component_single_column_readme} {
            z-index 50
            position absolute
            top auto
            left 0
            right 0
            bottom 100%
            margin 0
            overflow hidden
        }
    }
}
