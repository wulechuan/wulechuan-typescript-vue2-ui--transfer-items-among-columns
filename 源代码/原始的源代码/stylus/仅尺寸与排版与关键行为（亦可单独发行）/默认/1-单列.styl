@import '../_通用变量集_'

// Stylus 语言的变量名不允许采用汉字！

{identifiable_selector__sub_component_single_column} {
    display flex
    overflow hidden
    flex-direction column
    box-sizing border-box
    border-width 'var(%s)' % unquote(css_var_name__chief_blocks_border_width)
    border-style solid

    .列首 {
        margin 0
        padding 0
        border-width 0
    }

    .列标题栏 {
        position relative
        padding 0.5em 1em
        text-align center
    }

    .列标题栏之默认内容 {
        margin -0.5em -1em
        padding 0.8em 1em

        h5 {
            font-size 1.25em
            font-weight 600
            margin 0
            letter-spacing 0.1em
            // padding-left 0.1em
        }
    }

    .功能块-条目过滤器 {
        flex 0 0 2em
        display block
        padding 0.5em 0.75em
    }

    .条目过滤器-文本输入框 {
        font-size inherit
        display block
        box-sizing border-box
        width 100%
        height 2.2em
        padding 0.25em 1.2em
        line-height normal
    }

    .功能块-全选或全部取消选中 {
        padding 0.25em 1em
        margin-top -0.5em

        label.包裹着输入项 {
            display flex
            width 15em
            white-space nowrap
            // margin-left auto
            // margin-right auto
        }
    }

    .功能块-条目统计 {
        margin 0
        padding 0.3em 0.75em

        .字典式列表之条目 {
            display flex
            flex-direction row
            flex-wrap wrap
            max-width 24em
        }

        .字典式列表之条目 > dt,
        .字典式列表之条目 > dd {
            padding 0.25em

            > span {
                box-sizing border-box
                display block
                padding 0.2em 0.3em
                height 1.6em
                line-height 1.2
            }
        }

        .字典式列表之条目 > dt {
            flex 0 0 4em
            display block
            margin 0 -1em 0 0
        }

        .字典式列表之条目 > dd {
            flex 1 1 auto
            min-width 16em
            margin 0 0 0 2em
            display flex
            flex-direction row

            .括弧--左,
            .括弧--右 {
                line-height 1.2
            }

            .括弧--左 {
                flex 1 0 auto
                margin-left 0.5em
                margin-right 0
                text-align right

                &:first-child {
                    margin-left 0
                }
            }

            .括弧--右 {
                flex 0 0 auto
                margin-left 0
                text-align left
                margin-right 1em

                &:last-child {
                    margin-right -1em
                }
            }

            .值 {
                z-index 10
                flex 0 0 5em
                margin 0
                text-align right
            }

            .值-前缀,
            .值-后缀 {
                overflow hidden
                white-space nowrap
            }

            .值-前缀 {
                flex 0 2 auto
                text-align right
                margin-right 0.25em
            }

            .值-后缀 {
                flex 0 0 auto
                text-align left
                margin-left 0.25em
            }

            .值 + .括弧--右 {
                margin-left -0.15em
            }

            .值-后缀 + .括弧--右,
            .括弧--左 + .值-前缀 {
                margin-left -0.4em
            }
        }
    }

    .功能块-条目列表皿 {
        flex 1 1 auto
        display flex
        flex-direction column
        overflow hidden
        padding 0.1em 0.1em 0.1em 0.25em

        border-style solid
        border-top-width 'var(%s)' % unquote(css_var_name__chief_blocks_border_width)
        border-left-width 0
        border-right-width 0
        border-bottom-width 0
    }

    .条目列表 {
        list-style none
        padding 0
        flex 1 1
        height 100%
        overflow auto
        overflow-y scroll
        padding 0
        margin 0

        .条目 {
            user-select none
            padding 0 0.1em 0 0.25em
        }

        .条目视觉主体 {
            letter-spacing 0.1em
            cursor pointer
            display block
            padding 0.3em 0.5em
            overflow hidden

            transition-property color, background-color, opacity, border-color
            transition-duration 0.319s
            transition-timing-function ease-out

            &.已禁止选择 {
                cursor not-allowed

                .el-checkbox__input {
                    visibility hidden
                }
            }
        }
    }

    .功能块-条目列表说明书 {
        position relative
        padding 0.5em
        text-align center

        button {
            font-size 0.8em
        }
    }

    .条目列表说明书皿 {
        z-index 50
        position absolute
        top auto
        left 0
        right 0
        bottom 100%
        margin 0
        perspective: 15em;
        overflow hidden

        > .视觉主体 {
            margin 0.5em 0.3em
            transform-origin center 0%
            transform-style: preserve-3d

            animation-duration 0.45s
            animation-timing-function linear
            // animation-iteration-count infinite

            // Stylus 语言的关键帧动画名称不允许采用汉字！但借助 @属性名 之方法可以稳妥地采用汉字为 @keyframes 命名。
            animation-name wulechuan-dual-columns-exchange-data--list-readme-panel--presents
            animation-name unquote('吴乐川-双列互换数据之单列--动画--条目列表说明书--出现')
            @keyframes {@animation-name} {
                0%   {
                    transform: rotateX(-27deg) translateY(28.5em) translateZ(-2.8em) scaleX(86%);
                    opacity: 0;
                }

                33%  {
                    transform: rotateX(-9deg) translateY(18em) translateZ(-1em) scaleX(86%);
                }

                60%  {
                    transform: rotateX(-2deg) translateY(4em) translateZ(0.1em) scaleX(94%);
                    opacity: 1;
                }

                83%  {
                    transform: rotateX(-0.5deg) translateY(0.6em) translateZ(0) scaleX(98%);
                }

                100% {
                    transform: none;
                }
            }

            .标准按钮-叉 {
                margin 0.4em
            }
        }

        .条目列表说明书 {
            min-height 14em
            margin 0

            article {
                padding 0.5em 0 1.5em
            }
        }
    }
}
